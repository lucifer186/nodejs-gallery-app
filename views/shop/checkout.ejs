    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (products.length > 0) { %>
                <ul class="cart__item-list">
                    <% products.forEach(p => { %>
                        <li class="cart__item">
                            <h1><%= p.productId.title %></h1>
                            <h2>Quantity: <%= p.quantity %></h2>
                        </li>
                    <% }) %>
                </ul>
                <hr>
                <div class="centered">
             
                    <h2>Total price: $<%=totalSum%></h2>
                </div>
                <div class="centered" >
                 <button id="order-btn" class="btn">ORDER</button>
             
                <script>
                  /*  var stripe = Stripe('pk_test_51KY5gdSDGCNaFPV79XQfXgNSmbQNpMy3Tl2ewfKuKSRvc6zgpWWmziDOq5ksrbN8aEw5qMyFiDuEbukQ5eAbdIFH00bwxfeKIt'); */
                   var ordetBtn = document.getElementById('order-btn');
                   ordetBtn.addEventListener('click', function(){
                       stripe.redirectToCheckout({
                           sessionId:'<%= sessionId %>'
                       })
                   })
                </script>
                </div>
                
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>